<div class="content-wrapper" style="min-height: 956px;">
    <!-- Content Header (Page header) -->
    <section class="content-header text-center">
      <h1 >
        Create product
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Forms</a></li>
        <li class="active">General Elements</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-3">
        </div>
        <div class="col-md-6">
          <div class="box box-primary">
          
            <%= form_for [:admin, @product] do |f| %>
              <div class="box-body">
                <div class="form-group">
                	<%= f.label :name, "Nhập tên sản phẩm" %>
					        <%= f.text_field :name, class: 'form-control', placeholder: "Tên sản phẩm" %>
                </div>
                <div class="form-group">
                  <label>Phân loại</label>
                  <%= f.select :classify, options_for_select(Product.classifies), class: 'form-control'%>
                </div>

                <button type="button" class="btn bg-olive margin">Chi tiết sản phẩm</button>

                <div class="form-group">
                <%= f.fields_for [:admin, @product_detail] do |add| %>
                   <div class ="col-md-10 div1"></div>
                <% end %>               
                </div>


              
              <div class="box-footer">
              		<%= f.submit "Thêm sản phẩm", class: "btn btn-primary" %>
              </div>
            <% end %>



            <div hidden>
              <%= form_for [:admin, @product_detail] do |add| %>             
                <div class = "div2">
                  <div class="form-group">
                    <%= add.label :size_id, "Size" %>
                    <%= add.select :size_id, options_for_select(ProductDetail.size_ids), class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= add.label :color, "Màu sắc" %>
                    <%= add.text_field :color, class: 'form-control' %>
                  </div>
                  <div class="form-group">
                    <%= add.label :price, "Giá tiền" %>
                    <%= add.text_field :price, class: 'form-control' %>
                  </div>                
                  <button> Thêm chi tiết sản phẩm</button>  

                </div>
              <%end%>
            </div>

          </div>
        </div>
      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>