<div class="content-wrapper" style="min-height: 956px;">
    <!-- Content Header (Page header) -->
    <section class="content-header text-center">
      <h1 >
        Create product
      </h1>
      <ol class="breadcrumb">
        <li><a href="#"><i class="fa fa-dashboard"></i> Home</a></li>
        <li><a href="#">Products</a></li>
        <li class="active">Edit</li>
      </ol>
    </section>

    <!-- Main content -->
    <section class="content">
      <div class="row">
        <div class="col-md-3">
        </div>

        <div class="col-md-6">
          <div class="box box-primary">

          <% @product.image.all.map do |img| %>
           <div class = "index-img"> <%=image_tag img if @product.image.attached? %> </div> 
          <%end%>

            <%= render "shared/products_form"%>

          </div>
        </div>

      </div>
      <!-- /.row -->
    </section>
    <!-- /.content -->
  </div>